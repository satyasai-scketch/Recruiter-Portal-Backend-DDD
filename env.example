# Database Configuration
DATABASE_URL=sqlite:///./app.db

# JWT Configuration
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# Embedding Model Configuration
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2

# Email Configuration
EMAIL_PROVIDER=smtp  # Options: smtp, sendgrid, aws_ses

# SMTP Configuration (for Gmail, Outlook, etc.)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_USE_TLS=true

# SendGrid Configuration (if using SendGrid)
SENDGRID_API_KEY=your-sendgrid-api-key-here

# AWS SES Configuration (if using AWS SES)
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_REGION=us-east-1

# Storage Configuration
STORAGE_TYPE=local  # Options: "local" or "s3"

# Local Storage Configuration (when STORAGE_TYPE=local)
LOCAL_STORAGE_PATH=./uploads/cvs
LOCAL_STORAGE_URL_PREFIX=http://localhost:8000/uploads

# S3 Configuration for CV storage (when STORAGE_TYPE=s3)
S3_BUCKET_NAME=your-s3-bucket-name
S3_ACCESS_KEY_ID=your-s3-access-key-here
S3_SECRET_ACCESS_KEY=your-s3-secret-key-here
S3_REGION=us-east-1

# Common Email Settings
FROM_EMAIL=your-email@gmail.com
FROM_NAME=Recruiter AI
FRONTEND_URL=http://localhost:3000

# Application Settings
DEBUG=true
ENVIRONMENT=development

# CV Extraction Configuration
CV_EXTRACTION_APPROACH=regex  # Options: "regex", "spacy", "llm", "parser"

# Groq Configuration for LLM-based CV extraction
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.1-8b-instant  # Fast model for extraction
GROQ_TEMPERATURE=0.1  # Low temperature for consistent extraction

# CORS Configuration
# For production, replace "*" with specific frontend URLs
CORS_ORIGINS=["*"]  # Allow all origins (restrict for production)
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]  # Allow all HTTP methods
CORS_ALLOW_HEADERS=["*"]  # Allow all headers